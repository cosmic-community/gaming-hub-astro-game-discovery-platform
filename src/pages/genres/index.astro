---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import GenreCard from '../../components/GenreCard.astro'
import CosmicBadge from '../../components/CosmicBadge.astro'
import { getAllGenres, getGamesByGenre } from '../../lib/cosmic'

// Fetch all genres and their game counts
const allGenres = await getAllGenres()

const genresWithCounts = await Promise.all(
  allGenres.map(async (genre) => {
    const games = await getGamesByGenre(genre.id)
    return {
      genre,
      gameCount: games.length
    }
  })
)

const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG
---

<Layout title="Game Genres - Gaming Hub" description="Explore different game genres including Action, RPG, Strategy, and more. Find games that match your interests.">
  <Header />
  
  <main>
    <!-- Header Section -->
    <section class="py-16 bg-gradient-to-r from-gaming-darker to-gaming-dark border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            Game Genres
          </h1>
          <p class="text-xl text-gray-300 mb-6 max-w-3xl mx-auto">
            Discover games organized by genre. From action-packed adventures to strategic challenges, find the perfect game type for you.
          </p>
        </div>
      </div>
    </section>

    <!-- Genres Grid Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {genresWithCounts.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {genresWithCounts.map(({ genre, gameCount }) => (
              <GenreCard genre={genre} gameCount={gameCount} />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">üè∑Ô∏è</div>
            <h2 class="text-2xl font-bold text-white mb-2">No Genres Found</h2>
            <p class="text-gray-400">
              Check back later for new game categories!
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Browse Games CTA -->
    <section class="py-16 bg-gaming-dark border-t border-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Ready to Explore?
        </h2>
        <p class="text-gray-400 text-lg mb-8">
          Browse our complete collection of games or discover more about our featured developers.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/games" 
            class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
          >
            Browse All Games
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a 
            href="/developers" 
            class="inline-flex items-center border border-gray-600 hover:border-gray-500 text-white px-6 py-3 rounded-lg font-medium transition-colors hover:bg-gray-800"
          >
            View Developers
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>