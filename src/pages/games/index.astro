---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import GameCard from '../../components/GameCard.astro'
import CosmicBadge from '../../components/CosmicBadge.astro'
import { getAllGames } from '../../lib/cosmic'

// Fetch all games
const allGames = await getAllGames()

const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG
---

<Layout title="All Games - Gaming Hub" description="Browse our complete collection of games across all genres. Find action games, RPGs, strategy games, and more.">
  <Header />
  
  <main>
    <!-- Header Section -->
    <section class="py-16 bg-gradient-to-r from-gaming-darker to-gaming-dark border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
            All Games
          </h1>
          <p class="text-xl text-gray-300 mb-6 max-w-3xl mx-auto">
            Discover our complete collection of {allGames.length} amazing games across all genres.
          </p>
        </div>
      </div>
    </section>

    <!-- Games Grid Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {allGames.length > 0 ? (
          <>
            <!-- Featured Games First -->
            {allGames.filter(game => game.metadata?.featured_game).length > 0 && (
              <div class="mb-16">
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">
                  Featured Games
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                  {allGames
                    .filter(game => game.metadata?.featured_game)
                    .map(game => (
                      <GameCard game={game} featured={true} />
                    ))}
                </div>
              </div>
            )}
            
            <!-- All Games -->
            {allGames.filter(game => !game.metadata?.featured_game).length > 0 && (
              <div>
                <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">
                  All Games
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                  {allGames
                    .filter(game => !game.metadata?.featured_game)
                    .map(game => (
                      <GameCard game={game} />
                    ))}
                </div>
              </div>
            )}
          </>
        ) : (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">ðŸŽ®</div>
            <h2 class="text-2xl font-bold text-white mb-2">No Games Found</h2>
            <p class="text-gray-400">
              Check back later for new game releases!
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Browse Genres CTA -->
    <section class="py-16 bg-gaming-dark border-t border-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Looking for Something Specific?
        </h2>
        <p class="text-gray-400 text-lg mb-8">
          Browse games by genre to find exactly what you're looking for.
        </p>
        <a 
          href="/genres" 
          class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
        >
          Browse Genres
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>