// src/pages/games/[slug].astro
---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import CosmicBadge from '../../components/CosmicBadge.astro'
import { getAllGames, getGameBySlug, getGamesByGenre } from '../../lib/cosmic'
import type { Game } from '../../../types'

// This function is required for static site generation
export async function getStaticPaths() {
  const games = await getAllGames()
  
  return games.map((game) => ({
    params: { slug: game.slug },
    props: { game }
  }))
}

export interface Props {
  game: Game
}

// Get the game from props (passed from getStaticPaths)
const { game } = Astro.props

if (!game) {
  return Astro.redirect('/404')
}

// Fetch related games in the same genre
let relatedGames: Game[] = []
if (game.metadata?.genre?.id) {
  const allGamesInGenre = await getGamesByGenre(game.metadata.genre.id)
  // Filter out the current game and limit to 3 related games
  relatedGames = allGamesInGenre
    .filter(relatedGame => relatedGame.id !== game.id)
    .slice(0, 3)
}

// Utility functions
const formatDate = (dateString: string): string => {
  try {
    const date = new Date(dateString)
    return date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  } catch {
    return dateString
  }
}

const cleanDescription = (html: string): string => {
  return html.replace(/<[^>]*>/g, '')
}

const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG

// SEO and meta data
const gameTitle = game.metadata?.game_title || game.title
const description = game.metadata?.description ? cleanDescription(game.metadata.description).substring(0, 160) : `Learn more about ${gameTitle}`
const imageUrl = game.metadata?.featured_image?.imgix_url ? 
  `${game.metadata.featured_image.imgix_url}?w=1200&h=630&fit=crop&auto=format,compress` : 
  undefined
---

<Layout 
  title={`${gameTitle} - Gaming Hub`}
  description={description}
  image={imageUrl}
>
  <Header />
  
  <main>
    <!-- Game Hero Section -->
    <section class="relative bg-gradient-to-r from-gaming-darker to-gaming-dark py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <!-- Game Info -->
          <div>
            <!-- Breadcrumb -->
            <nav class="mb-6" aria-label="Breadcrumb">
              <div class="flex items-center space-x-2 text-sm text-gray-400">
                <a href="/" class="hover:text-white transition-colors">Home</a>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <a href="/games" class="hover:text-white transition-colors">Games</a>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-white">{gameTitle}</span>
              </div>
            </nav>

            <!-- Genre Badge -->
            {game.metadata?.genre && (
              <div class="mb-4">
                <a 
                  href={`/genres/${game.metadata.genre.slug}`}
                  class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium"
                  style={`background-color: ${game.metadata.genre.metadata?.genre_color || '#6366f1'}20; color: ${game.metadata.genre.metadata?.genre_color || '#6366f1'}`}
                >
                  {game.metadata.genre.metadata?.genre_name || game.metadata.genre.title}
                </a>
              </div>
            )}

            <!-- Rating -->
            {game.metadata?.rating && (
              <div class="mb-4">
                <span class="inline-flex items-center px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm font-medium">
                  {game.metadata.rating.value}
                </span>
              </div>
            )}

            <!-- Featured Badge -->
            {game.metadata?.featured_game && (
              <div class="mb-6">
                <span class="inline-flex items-center px-3 py-1 bg-gaming-accent text-white rounded-full text-sm font-medium">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  Featured Game
                </span>
              </div>
            )}

            <!-- Title -->
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
              {game.metadata?.game_title || game.title}
            </h1>

            <!-- Description -->
            {game.metadata?.description && (
              <div class="prose prose-invert max-w-none mb-8">
                <div set:html={game.metadata?.description} />
              </div>
            )}

            <!-- Game Details -->
            <div class="space-y-4 mb-8">
              <!-- Developer -->
              {game.metadata?.developer && (
                <div class="flex items-center">
                  <span class="text-gray-400 w-24 flex-shrink-0">Developer:</span>
                  <a 
                    href={`/developers/${game.metadata.developer.slug}`}
                    class="text-primary-400 hover:text-primary-300 font-medium transition-colors"
                  >
                    {game.metadata.developer.metadata?.studio_name || game.metadata.developer.title}
                  </a>
                </div>
              )}

              <!-- Release Date -->
              {game.metadata?.release_date && (
                <div class="flex items-center">
                  <span class="text-gray-400 w-24 flex-shrink-0">Released:</span>
                  <span class="text-white">
                    {formatDate(game.metadata.release_date)}
                  </span>
                </div>
              )}

              <!-- Platforms -->
              {game.metadata?.platform && game.metadata.platform.length > 0 && (
                <div class="flex items-start">
                  <span class="text-gray-400 w-24 flex-shrink-0 pt-1">Platforms:</span>
                  <div class="flex flex-wrap gap-2">
                    {game.metadata.platform.map((platform: string) => (
                      <span class="px-2 py-1 bg-gray-800 text-gray-300 rounded text-sm">
                        {platform}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              <!-- Website Link -->
              {game.metadata?.developer?.metadata?.website && (
                <div class="flex items-center">
                  <span class="text-gray-400 w-24 flex-shrink-0">Website:</span>
                  <a 
                    href={game.metadata.developer.metadata.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-primary-400 hover:text-primary-300 font-medium transition-colors inline-flex items-center"
                  >
                    Visit Developer Site
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              )}
            </div>
          </div>

          <!-- Game Image -->
          <div class="order-first lg:order-last">
            {game.metadata?.featured_image ? (
              <img 
                src={`${game.metadata.featured_image.imgix_url}?w=800&h=600&fit=crop&auto=format,compress`}
                alt={game.metadata.game_title || game.title}
                class="w-full rounded-lg shadow-2xl"
                loading="eager"
                width="800"
                height="600"
              />
            ) : (
              <div class="w-full h-96 bg-gradient-to-br from-gaming-dark to-gaming-darker rounded-lg flex items-center justify-center shadow-2xl">
                <div class="text-center">
                  <div class="text-6xl mb-4">ðŸŽ®</div>
                  <p class="text-xl font-medium">{game.metadata?.game_title || game.title}</p>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Screenshots Section -->
    {game.metadata?.screenshots && game.metadata.screenshots.length > 0 && (
      <section class="py-16 bg-gaming-dark">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-white mb-8 text-center">Screenshots</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {game.metadata.screenshots.map((screenshot: any, index: number) => (
              <div class="aspect-video rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                <img 
                  src={`${screenshot.imgix_url}?w=600&h=400&fit=crop&auto=format,compress`}
                  alt={`${game.metadata.game_title || game.title} screenshot ${index + 1}`}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                  width="600"
                  height="400"
                />
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Related Games Section -->
    {relatedGames.length > 0 && (
      <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-white mb-4">
              More {game.metadata?.genre?.metadata?.genre_name || 'Similar'} Games
            </h2>
            {game.metadata?.genre && (
              <a 
                href={`/genres/${game.metadata.genre.slug}`}
                class="text-primary-400 hover:text-primary-300 font-medium transition-colors inline-flex items-center"
              >
                View All {game.metadata.genre.metadata?.genre_name || game.metadata.genre.title} Games â†’
              </a>
            )}
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedGames.map((relatedGame: Game) => (
              <article class="bg-gaming-dark rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <div class="aspect-video">
                  {relatedGame.metadata?.featured_image ? (
                    <img 
                      src={`${relatedGame.metadata.featured_image.imgix_url}?w=600&h=400&fit=crop&auto=format,compress`}
                      alt={relatedGame.metadata.game_title || relatedGame.title}
                      class="w-full h-full object-cover"
                      loading="lazy"
                      width="600"
                      height="400"
                    />
                  ) : (
                    <div class="w-full h-full bg-gradient-to-br from-gaming-darker to-gaming-dark flex items-center justify-center">
                      <div class="text-center">
                        <div class="text-4xl mb-2">ðŸŽ®</div>
                        <p class="text-sm text-gray-400">No Image</p>
                      </div>
                    </div>
                  )}
                </div>
                
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-2">
                    <a 
                      href={`/games/${relatedGame.slug}`}
                      class="hover:text-primary-400 transition-colors"
                    >
                      {relatedGame.metadata?.game_title || relatedGame.title}
                    </a>
                  </h3>
                  
                  {relatedGame.metadata?.description && (
                    <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                      {cleanDescription(relatedGame.metadata.description)}
                    </p>
                  )}
                  
                  <div class="flex justify-between items-center">
                    <a 
                      href={`/games/${relatedGame.slug}`}
                      class="text-primary-400 hover:text-primary-300 text-sm font-medium transition-colors inline-flex items-center"
                    >
                      Learn More
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                    
                    {relatedGame.metadata?.genre && (
                      <span 
                        class="px-2 py-1 rounded text-xs font-medium"
                        style={`background-color: ${relatedGame.metadata.genre.metadata?.genre_color || '#6366f1'}20; color: ${relatedGame.metadata.genre.metadata?.genre_color || '#6366f1'}`}
                      >
                        {relatedGame.metadata.genre.metadata?.genre_name || relatedGame.metadata.genre.title}
                      </span>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Back to Games CTA -->
    <section class="py-16 bg-gaming-dark border-t border-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Discover More Games
        </h2>
        <p class="text-gray-400 text-lg mb-8">
          Explore our full collection of games across different genres and find your next gaming adventure.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/games" 
            class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
          >
            Browse All Games
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a 
            href="/genres" 
            class="inline-flex items-center border border-gray-600 hover:border-gray-500 text-white px-6 py-3 rounded-lg font-medium transition-colors hover:bg-gray-800"
          >
            Browse by Genre
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .prose {
    max-width: none;
  }
  
  .prose p {
    margin-bottom: 1rem;
    color: #d1d5db;
    line-height: 1.6;
  }
  
  .prose strong {
    color: #ffffff;
    font-weight: 600;
  }
  
  .prose a {
    color: #8b5cf6;
    text-decoration: none;
  }
  
  .prose a:hover {
    color: #a78bfa;
  }
</style>