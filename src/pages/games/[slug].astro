// src/pages/games/[slug].astro
---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import CosmicBadge from '../../components/CosmicBadge.astro'
import { getGameBySlug, getGamesByGenre, getAllGames } from '../../lib/cosmic'
import type { Game } from '../../../types'

export interface Props {
  game: Game
  relatedGames: Game[]
}

// Required for dynamic routes in Astro static builds
export async function getStaticPaths() {
  try {
    const games = await getAllGames()
    
    return games.map((game) => ({
      params: { slug: game.slug }
    }))
  } catch (error) {
    console.error('Error generating static paths:', error)
    return []
  }
}

// Get the slug from params
const { slug } = Astro.params

// Fetch the game data
const game = await getGameBySlug(slug!)

if (!game) {
  return Astro.redirect('/404')
}

// Get related games by genre
const relatedGames = game.metadata?.genre
  ? (await getGamesByGenre(game.metadata.genre.id)).filter(g => g.id !== game.id).slice(0, 3)
  : []

// Environment variable for Cosmic Badge
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG

// Helper functions
const formatDate = (dateString: string): string => {
  try {
    const date = new Date(dateString)
    return date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  } catch {
    return dateString
  }
}

const cleanDescription = (html: string): string => {
  return html.replace(/<[^>]*>/g, '').substring(0, 120) + '...'
}

// Page title and description
const pageTitle = `${game.metadata?.game_title || game.title} - Gaming Hub`
const pageDescription = game.metadata?.description 
  ? cleanDescription(game.metadata.description)
  : `Discover ${game.metadata?.game_title || game.title} and more amazing games.`
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <!-- Game Header Section -->
    <section class="py-16 bg-gradient-to-r from-gaming-darker to-gaming-dark border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Game Info -->
          <div>
            <!-- Genre Badge -->
            {game.metadata?.genre && (
              <div class="mb-4">
                <span 
                  class="inline-block px-3 py-1 text-sm font-medium rounded-full border"
                  style={`color: ${game.metadata.genre.metadata?.genre_color || '#fff'}; border-color: ${game.metadata.genre.metadata?.genre_color || '#666'};`}
                >
                  {game.metadata.genre.metadata?.genre_name || game.metadata.genre.title}
                </span>
              </div>
            )}
            
            <!-- Rating Badge -->
            {game.metadata?.rating && (
              <div class="mb-4">
                <span class="bg-gray-800 text-white px-3 py-1 rounded-full text-sm font-medium">
                  {game.metadata.rating.value}
                </span>
              </div>
            )}
            
            <!-- Featured Badge -->
            {game.metadata?.featured_game && (
              <div class="mb-4">
                <span class="bg-gradient-to-r from-primary-500 to-gaming-accent text-white px-3 py-1 rounded-full text-sm font-medium">
                  ‚≠ê Featured Game
                </span>
              </div>
            )}
            
            <!-- Title -->
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
              {game.metadata?.game_title || game.title}
            </h1>
            
            <!-- Description -->
            <div class="text-gray-300 text-lg mb-8 prose prose-invert max-w-none">
              <div set:html={game.metadata?.description} />
            </div>
            
            <!-- Game Details -->
            <div class="space-y-4">
              {game.metadata?.developer && (
                <div class="flex items-center">
                  <span class="text-gray-400 w-20">Developer:</span>
                  <a 
                    href={`/developers/${game.metadata.developer.slug}`}
                    class="text-primary-400 hover:text-primary-300 font-medium"
                  >
                    {game.metadata.developer.metadata?.studio_name || game.metadata.developer.title}
                  </a>
                </div>
              )}
              
              {game.metadata?.release_date && (
                <div class="flex items-center">
                  <span class="text-gray-400 w-20">Released:</span>
                  <span class="text-white">
                    {formatDate(game.metadata.release_date)}
                  </span>
                </div>
              )}
              
              {game.metadata?.platform && game.metadata.platform.length > 0 && (
                <div class="flex items-start">
                  <span class="text-gray-400 w-20">Platforms:</span>
                  <div class="flex flex-wrap gap-2">
                    {game.metadata.platform.map((platform: string) => (
                      <span key={platform} class="bg-gray-800 text-white px-2 py-1 rounded text-sm">
                        {platform}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
            
            <!-- Website Link -->
            {game.metadata?.developer?.metadata?.website && (
              <div class="mt-8">
                <a 
                  href={game.metadata.developer.metadata.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
                >
                  Visit Developer Website
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            )}
          </div>
          
          <!-- Game Image -->
          <div class="lg:order-first">
            {game.metadata?.featured_image ? (
              <img 
                src={`${game.metadata.featured_image.imgix_url}?w=800&h=600&fit=crop&auto=format,compress`}
                alt={game.metadata.game_title || game.title}
                class="w-full h-96 object-cover rounded-lg shadow-2xl"
                loading="eager"
                width="800"
                height="600"
              />
            ) : (
              <div class="w-full h-96 bg-gradient-to-br from-primary-500 to-gaming-accent rounded-lg shadow-2xl flex items-center justify-center">
                <span class="text-white text-6xl">üéÆ</span>
              </div>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Screenshots Section -->
    {game.metadata?.screenshots && game.metadata.screenshots.length > 0 && (
      <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-white mb-8">Screenshots</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {game.metadata.screenshots.map((screenshot: any, index: number) => (
              <img 
                key={index}
                src={`${screenshot.imgix_url}?w=600&h=400&fit=crop&auto=format,compress`}
                alt={`${game.metadata.game_title || game.title} screenshot ${index + 1}`}
                class="w-full h-48 object-cover rounded-lg shadow-lg hover:shadow-xl transition-shadow cursor-pointer"
                loading="lazy"
                width="600"
                height="400"
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Related Games Section -->
    {relatedGames.length > 0 && (
      <section class="py-16 bg-gaming-dark border-t border-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl font-bold text-white mb-4 text-center">
            More {game.metadata?.genre?.metadata?.genre_name || 'Similar'} Games
          </h2>
          {game.metadata?.genre && (
            <div class="text-center mb-8">
              <a 
                href={`/genres/${game.metadata.genre.slug}`}
                class="text-primary-400 hover:text-primary-300 font-medium"
              >
                View All {game.metadata.genre.metadata?.genre_name || game.metadata.genre.title} Games ‚Üí
              </a>
            </div>
          )}
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedGames.map((relatedGame: Game) => (
              <article key={relatedGame.id} class="bg-gaming-darker rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                <a href={`/games/${relatedGame.slug}`} class="block">
                  {relatedGame.metadata?.featured_image ? (
                    <img 
                      src={`${relatedGame.metadata.featured_image.imgix_url}?w=600&h=300&fit=crop&auto=format,compress`}
                      alt={relatedGame.metadata.game_title || relatedGame.title}
                      class="w-full h-48 object-cover"
                      loading="lazy"
                      width="600"
                      height="300"
                    />
                  ) : (
                    <div class="w-full h-48 bg-gradient-to-br from-primary-500/20 to-gaming-accent/20 flex items-center justify-center">
                      <span class="text-white text-4xl">üéÆ</span>
                    </div>
                  )}
                  
                  <div class="p-6">
                    <h3 class="text-xl font-bold text-white mb-2 hover:text-primary-400 transition-colors">
                      {relatedGame.metadata?.game_title || relatedGame.title}
                    </h3>
                    {relatedGame.metadata?.description && (
                      <p class="text-gray-400 text-sm">
                        {cleanDescription(relatedGame.metadata.description)}
                      </p>
                    )}
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Call to Action -->
    <section class="py-16 bg-gradient-to-r from-primary-900/10 to-gaming-accent/10 border-t border-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Discover More Games
        </h2>
        <p class="text-gray-400 text-lg mb-8">
          Explore our complete collection of games across all genres and find your next gaming adventure.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/games" 
            class="inline-flex items-center bg-primary-500 hover:bg-primary-600 text-white px-6 py-3 rounded-lg font-medium transition-colors"
          >
            Browse All Games
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a 
            href="/genres" 
            class="inline-flex items-center border border-gray-600 hover:border-gray-500 text-white px-6 py-3 rounded-lg font-medium transition-colors hover:bg-gray-800"
          >
            Browse by Genre
          </a>
        </div>

        <!-- Instagram Redirect -->
        <div class="mt-8 pt-8 border-t border-gray-800">
          <p class="text-gray-400 mb-4">Follow us for more gaming content:</p>
          <a 
            href="https://instagram.com/doubtfxll" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-pink-400 hover:text-pink-300 font-medium transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.004 5.367 18.637.001 12.017.001zM8.9 2.768c.847 0 1.534.687 1.534 1.534 0 .847-.687 1.534-1.534 1.534-.847 0-1.534-.687-1.534-1.534 0-.847.687-1.534 1.534-1.534zm7.7 0c.847 0 1.534.687 1.534 1.534 0 .847-.687 1.534-1.534 1.534-.847 0-1.534-.687-1.534-1.534 0-.847.687-1.534 1.534-1.534zM12 7.25c2.622 0 4.75 2.128 4.75 4.75S14.622 16.75 12 16.75 7.25 14.622 7.25 12 9.378 7.25 12 7.25zM12 9c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3z"/>
            </svg>
            @doubtfxll on Instagram
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>